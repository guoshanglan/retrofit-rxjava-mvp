<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

        <include layout="@layout/title_head_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_verification_code_hint"
            android:textColor="@color/login_title"
            android:textSize="@dimen/x28"
            android:layout_marginTop="@dimen/x30"
            android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/x15"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/x18"
        android:id="@+id/tv_number"
        android:text="验证码已通过短信发送至 181 2563 5489"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x3"
        android:orientation="horizontal">

        <cc.hisens.hardboiled.patient.wideview.PhoneCode
            android:id="@+id/phonecode_view"
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x40" />


        <Button
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x30"
            android:textSize="@dimen/x14"
            android:textColor="@color/white"
            android:text="@string/get_verification_code"
            android:id="@+id/btn_getCode"
            android:background="@drawable/btn_getverification_code_input_shape"
            android:layout_marginTop="@dimen/x40" />


    </LinearLayout>


    <Button
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/x50"
        android:text="@string/login"
        android:textColor="@color/white"
        android:clickable="false"
        android:inputType="number"
        android:id="@+id/btn_login"
        android:background="@drawable/btn_getverification_code_uninput_shape"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x40"/>




</LinearLayout>