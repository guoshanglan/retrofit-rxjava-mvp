<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!--<include layout="@layout/include_title_bar" />-->

    <include layout="@layout/include_separator" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/device_message_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x18"
            android:background="@color/sync_fail_color"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="gone" />
    </FrameLayout>


    <include layout="@layout/include_separator" />

    <LinearLayout
        android:id="@+id/radiogrop_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x55"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="7.5dp">

        <RadioButton
            android:id="@+id/rbtn_monitor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/sl_home"
            android:gravity="center"
            android:text="@string/label_monitor"
            android:textColor="@drawable/sl_main_button_text_color"
            android:textSize="@dimen/bottom_bar_textsize" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rbtn_doctor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableTop="@drawable/sl_doctor"
                android:gravity="center"
                android:text="@string/label_doctor"
                android:textColor="@drawable/sl_main_button_text_color"
                android:textSize="@dimen/bottom_bar_textsize" />
            <TextView
                android:id="@+id/tv_doctor_message_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x25"
                android:background="@drawable/red_dot"
                android:gravity="center"
                android:textColor="@color/white"
                tools:text="8"
                tools:visibility="visible" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <RadioButton
                android:id="@+id/rbtn_helper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableTop="@drawable/sl_helper"
                android:gravity="center"
                android:text="@string/label_helper"
                android:textColor="@drawable/sl_main_button_text_color"
                android:textSize="@dimen/bottom_bar_textsize" />
            <TextView
                android:id="@+id/tv_helper_message_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x25"
                android:background="@drawable/red_dot"
                android:gravity="center"
                tools:text="4"
                android:textColor="@color/white"
                tools:visibility="visible"/>
        </RelativeLayout>


        <RadioButton
            android:id="@+id/rbtn_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/sl_me"
            android:gravity="center"
            android:text="@string/me"
            android:textColor="@drawable/sl_main_button_text_color"
            android:textSize="@dimen/bottom_bar_textsize" />
    </LinearLayout>


    </LinearLayout>
